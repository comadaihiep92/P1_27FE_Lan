mixin menu(list, ulClass, liClass, href)
    - var menuName= list
    ul(class= ulClass)
        each val in menuName
            li(class= liClass)
                a(href= href)&attributes(attributes)= val

mixin slide(vine, type, since)
    h1.slide__vine= vine
    h3.slide__type= type
    p.slide__since= since
        

mixin product(item, status, img, title, price, unit, discount, unit2, href, link)
    div(class= item)
        if(status)
            img.product__status(src= status, alt="status")
            .product__container-img
                img.product__image(src= img, alt="img")
                .product__hover
                    .product__hover-1
                        img(src="../dist/images/icon-love.png", alt="icon love" class="product__image-hover")
                        span.product__info-hover  Yêu thích
                    .product__hover-2
                        img(src="../dist/images/icon-compare.png", alt="icon compare" class="product__image-hover")
                        span.product__info-hover  So sánh
                    .product__hover-2
                        img(src="../dist/images/icon-arrow-compare.png", alt="icon button" class="product__image--hover")
            h1.product__title= title
            p.product__price.product__discount= price
                |
                sup.product__unit= unit
                |  - 
                span.product__price-origin= discount
                    sup.product__unit= unit2
            |
            |
            a.product__link(href= href)&attributes(attributes)= link
        else
            .product__container-img
                img.product__image(src= img, alt="img")
                .product__hover
                    .product__hover-1
                        img(src="../dist/images/icon-love.png", alt="icon love" class="product__image-hover")
                        span.product__info-hover  Yêu thích
                    .product__hover-2
                        img(src="../dist/images/icon-compare.png", alt="icon compare" class="product__image-hover")
                        span.product__info-hover  So sánh
                    .product__hover-2
                        img(src="../dist/images/icon-arrow-compare.png", alt="icon button" class="product__image--hover")
            h1.product__title= title
            p.product__price.product__discount= price
                |
                sup.product__unit= unit
                |  - 
                span.product__price-origin= discount
                    sup.product__unit= unit2
            |
            |
            a.product__link(href= href)&attributes(attributes)= link


mixin productGrid(src, alt, title)
    .product__grid-item
        - var listImg= src
        each val in listImg
            |
            |
            img.product__grid-img(src= val, alt= alt)
            img.product__grid-title(src= title)

