mixin footerMenu(title, list, href)
    h1.footer__title= title
    .footer__menu
        ul.footer__menu-list
        - var menuFooter= list
        each val in menuFooter
            li.footer__menu-item
                a.footer__menu-link(href= href)&attributes(attributes)= val

