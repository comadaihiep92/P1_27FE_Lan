    .container
        .footer__list
            // footer item 1
            .footer__item
                +footerMenu(
                    "Thông tin",
                    [ "Về chúng tôi", "Giao hàng", "Cảm nghĩ", "Lưu trữ", "Chính sách riêng tư" ],
                    "#"
